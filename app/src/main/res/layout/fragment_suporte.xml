<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/azul_marinho"
    tools:context=".SuporteFragment">

    <TextView
        android:id="@+id/suporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUPORTE!"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_marginBottom="100dp"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="@android:color/white"
        />


    <TextView
        android:id="@+id/duvpassageiro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opa, Passageiro?"
        android:textColor="@color/verde"
        android:textSize="40sp"
        android:layout_marginBottom="30dp"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:rotation="-5"
        android:scaleX="1.1"
        android:scaleY="1.1"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPassengerSupport"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suporte para Passageiros"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/duvpassageiro"

        />

    <TextView
        android:id="@+id/duvmotorista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opa, Motorista?"
        android:textColor="@color/vermelho"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:rotation="-5"
        android:scaleX="1.1"
        android:scaleY="1.1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDriverSupport"
        style="@style/Button"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cinza"
        android:text="Suporte para Motoristas"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/duvmotorista"
        />

</LinearLayout>
