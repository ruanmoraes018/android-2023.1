<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/azul_marinho"
    tools:context=".MenuFragment">

    <TextView
        android:layout_width="wrap_content"
        android:text="Menu Passageiro"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        />

    <View
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/container_user"
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:id="@+id/fotoperfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_user"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-150dp"
        />

    <Button
        android:id="@+id/btnfoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir Camera"
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_user"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/nomeDoPassageiroTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lucas de Souza e Souza"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="-38dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:id="@+id/emailIconImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_email"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emailDoPassageiroTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="-40dp"
        android:text="lucas@gmail.com"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>
